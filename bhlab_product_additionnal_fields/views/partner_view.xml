<odoo>
    <record id="bhlab_view_partner_info_form" model="ir.ui.view">
        <field name="name">bhlab_res.partner.rinfo.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']//field[@name='customer']" position="after">
                    <field name="customer_type" attrs="{'invisible':[('customer', '!=', True)]}" />
                </xpath>
            </field>
    </record>
</odoo>


